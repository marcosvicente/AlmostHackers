<div class="d-flex justify-content-center mt-4">
  <div class="row align-items-center border border-1 rounded p-2">
    <%= form_for(@exame) do |form| %>
      <div class="mb-3">
        <%= form.label :description, class: "form-label" %><br />
        <%= form.text_area :description,  class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.select :patient_id, @patient_select_array, {prompt:'select'}, {class: "form-select"} %>
      </div>
      <div class="mb-3">
        <%= form.button :submit, class:"btn btn-primary w-50", tabindex:"4" do %>
          Save
        <% end %>
      </div>
    <% end %>
  </div>
</div>